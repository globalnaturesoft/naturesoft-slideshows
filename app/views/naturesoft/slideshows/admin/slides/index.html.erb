<% title "Slides" %>

<div class="text-right">
    <%= link_to ("#{t(:new_slide)}" + '<i class="icon-plus22 position-right"></i>').html_safe, naturesoft.new_admin_slide_path, class: 'btn btn-primary' %>
</div>
<br />

<form class="listing-form">
    <div class="panel panel-flat">
        <div class="panel-body filter-box">
            <div class="row">
                <div class="col-md-3">
                    <div class="form-group">
                        <label><%= t(:slideshows) %></label>
                        <%= select_tag(:slideshow_id, options_from_collection_for_select(Naturesoft::Slideshows::Slideshow.all, :id, :name, :selected => params[:slideshow_id]), include_blank: t(:all), class: "select2") %>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="form-group">
                        <label><%= t(:sort_by) %></label>
                        <%= select_tag(:sort_by, options_for_select(Naturesoft::Slideshows::Slide.sort_by, :selected => params[:sort_by]), class: "select2") %>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="form-group">
                        <label><%= t(:sort_order) %></label>
                        <%= select_tag(:sort_orders, options_for_select(Naturesoft::Slideshows::Slide.sort_orders, :selected => params[:sort_orders]), class: "select2") %>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="form-group has-feedback">
                        <label><%= t(:search) %></label>
                        <input type="text" name="key" class="form-control" placeholder="Enter search..." value="<%= params[:key] %>">
                        <div class="form-control-feedback">
                            <i class="icon-search4 text-size-base"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <!-- Basic datatable -->
    <div class="panel panel-flat">        
        <div class="table-container">
            <table class="table table-striped">
                <thead>
                    <tr class="bg-teal-800">
                        <th>Image</th>
                        <th>Name</th>
                        <th>Description</th>
                        <th>Creator</th>
                        <th>Created At</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% @slides.each do |slide| %>
                        <tr>
                          <td>
                              <%= image_tag(slide.image.system, size: "80x60", class: "img-rounded img-preview") %>
                            
                          </td>
                          <td>
                              <%= slide.name %>
                          </td>
                          <td>
                              <%= slide.description %>
                          </td>
                          <td>
                            <div class="media-left align_center">
                                <img src="" class="img-circle" alt="">
                                <br />Creator
                            </div>
                          </td>
                          <td><%= slide.created_at.strftime("%d/%m/%Y") %></td>
                          <td class="text-center">
                            <ul class="icons-list">
                              <li class="dropdown">
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                    <i class="icon-menu9"></i>
                                </a>
        
                                <ul class="dropdown-menu dropdown-menu-right">
                                  <li>
                                      <%= link_to '<i class="glyphicon glyphicon-edit"></i>'.html_safe + t(:edit), naturesoft.edit_admin_slide_path(slide) %>
                                  </li>
                                  <li>
                                      <%= link_to '<i class="glyphicon glyphicon-trash"></i>'.html_safe + t(:delete), naturesoft.admin_slide_path(slide), method: :delete, data: { confirm: 'Are you sure?' } , class: "backend_delete_item" %>
                                  </li>
                                </ul>
                              </li>
                            </ul>
                          </td>
                      </tr>
                    <% end %>
                </tbody>
            </table>
        </div>
        
        <div class="dataTables_wrapper no-footer">
            <div class="datatable-footer showed">
                <div class="dataTables_info" ><%= page_entries_info @slides %></div>
                <div class="dataTables_paginate paging_simple_numbers">
                    <%= will_paginate @slides, previous_label: '←', next_label: '→', renderer: BootstrapPagination::Rails %>
                </div>
            </div>
        </div>    
    </div>
    <!-- /basic datatable -->
</form>