<p id="notice"><%= notice %></p>

<h1>Slideshows</h1>

<table>
  <thead>
    <tr>
      <th colspan="3">Height</th>
      <th colspan="3">Width</th>
      <th colspan="3">Style</th>
    </tr>
  </thead>

  <tbody>
    <% @slideshows.each do |slideshow| %>
      <tr>
        <td colspan="3"><%= slideshow.height %></td>
        <td colspan="3"><%= slideshow.width %></td>
        <td colspan="3"><%= slideshow.image_style %></td>
      </tr>
      <tr>
        <td><%= link_to 'Show', [naturesoft, slideshow] %></td>
        <td><%= link_to 'Edit', naturesoft.edit_slideshow_path(slideshow) %></td>
        <td><%= link_to 'Destroy', [naturesoft, slideshow], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Slideshow', naturesoft.new_slideshow_path %>
