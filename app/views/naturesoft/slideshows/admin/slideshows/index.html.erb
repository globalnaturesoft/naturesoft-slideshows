<% title "Slideshows" %>

<div class="text-right">
    <%= link_to ("#{t(:new_slideshow)}" + '<i class="icon-plus22 position-right"></i>').html_safe, naturesoft_slideshows.new_admin_slideshow_path, class: 'btn btn-primary' %>
</div>
<br />
<form class="listing-form">
  
  <div class="panel panel-flat">
      <div class="panel-body filter-box">                
          <div class="row">
              <div class="col-md-3">
                  <div class="form-group">
                      <label><%= t(:image_style) %></label>
                      <%= select_tag(:style, options_for_select(Naturesoft::Slideshows::Slideshow.filter_image_style, :selected => params[:style]), include_blank: t(:all), class: "select2") %>
                  </div>
              </div>
              <div class="col-md-3">
                  <div class="form-group">
                      <label><%= t(:sort_by) %></label>
                      <%= select_tag(:sort_by, options_for_select(Naturesoft::Slideshows::Slideshow.sort_by, :selected => params[:sort_by]), class: "select2") %>
                  </div>
              </div>
              <div class="col-md-3">
                  <div class="form-group">
                      <label><%= t(:sort_order) %></label>
                      <%= select_tag(:sort_orders, options_for_select(Naturesoft::Slideshows::Slideshow.sort_orders, :selected => params[:sort_orders]), class: "select2") %>
                  </div>
              </div>
              <div class="col-md-3">
                  <div class="form-group has-feedback">
                      <label><%= t(:search) %></label>
                      <input type="text" name="keyword" class="form-control" placeholder="Enter search..." value="<%= params[:keyword] %>">
                      <div class="form-control-feedback">
                          <i class="icon-search4 text-size-base"></i>
                      </div>
                  </div>
              </div>
          </div>
      </div>
  </div>
  
  <!-- Basic datatable -->
  <div class="panel panel-flat">
    <div class="table-container">
      <table class="table table-striped">
        <thead>
          <tr class="bg-teal-800">
              <th>Name</th>
              <th>Size</th>
              <th>Image Style</th>
              <th>Creator</th>
              <th>Created At</th>
							<th>Status</th>
              <th class="text-right">Actions</th>
          </tr>
        </thead>
        <tbody>
          <% @slideshows.each do |slideshow| %>
            <tr>
              <td class="kq_search">
                <%= slideshow.name %>
              </td>
              <td class="kq_search">
                <%= slideshow.width %>x<%= slideshow.height %>
              </td>
              <td class="kq_search">
                <%= slideshow.image_style %>
              </td>
              <td>
                <div class="media-left align_center">
                    <img src="" class="img-circle" alt="">
                    <br />Creator
                </div>
              </td>
              <td><%= slideshow.created_at.strftime("%d/%m/%Y") %></td>
							<td></td>
              <td class="text-right">
                <div class="btn-group">
									<%= link_to '<i class="icon-pencil"></i>'.html_safe, naturesoft_slideshows.edit_admin_slideshow_path(slideshow), class: "btn bg-teal-400 btn-icon" %>
                  <button type="button" class="btn bg-teal-400 dropdown-toggle" data-toggle="dropdown" aria-expanded="false"><span class="caret"></span></button>
                  <ul class="dropdown-menu dropdown-menu-right">
										<li>
											
										</li>
										<li class="divider"></li>
										<li>
											<%= link_to '<i class="glyphicon glyphicon-trash"></i>'.html_safe + t(:delete), naturesoft_slideshows.admin_slideshow_path(slideshow), method: :delete, data: { confirm: 'Are you sure?' } , class: "backend_delete_item" %>
										</li>
									</ul>
								</div>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <div class="dataTables_wrapper no-footer">
        <div class="datatable-footer showed">
            <div class="dataTables_info" ><%= page_entries_info @slideshows %></div>
            <div class="dataTables_paginate paging_simple_numbers">
              <%= will_paginate @slideshows, previous_label: '←', next_label: '→', renderer: BootstrapPagination::Rails %>
            </div>
        </div>
      </div>
    
    </div>
  </div>
  <!-- /basic datatable -->
</form>